# Data Pipeline Configuration
# Copy this file to .env and update values

# ============================================================================
# AI Service (Embedding Generation)
# ============================================================================
AI_SERVICE_URL=http://localhost:8001/v1/embeddings
AI_MODEL=siglip2
AI_SERVICE_TIMEOUT=60

# ============================================================================
# Milvus (Vector Database)
# ============================================================================
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=anime_frames
VECTOR_DIM=1152  # SigLIP2: 1152, CLIP: 512

# ============================================================================
# Elasticsearch (Metadata Search)
# ============================================================================
ELASTIC_HOST=localhost
ELASTIC_PORT=9200
ELASTIC_INDEX=anime_frames
# ELASTIC_USER=elastic
# ELASTIC_PASSWORD=your_password

# ============================================================================
# Processing Configuration
# ============================================================================
# Ingestion
VIDEO_DIR=./data/raw_videos
FRAME_INTERVAL=1.0
BATCH_SIZE=16
PROCESSED_LOG=./processed_videos.txt

# Crawler
CRAWLER_OUTPUT_DIR=./data/raw_videos
CRAWLER_HEADLESS=true
CRAWLER_DELAY=5

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=data_pipeline.log
