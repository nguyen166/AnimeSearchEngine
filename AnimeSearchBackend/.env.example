# FastAPI Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=anime_frames
VECTOR_DIM=512

# Elasticsearch Configuration
ELASTIC_HOST=localhost
ELASTIC_PORT=9200
ELASTIC_INDEX=anime_metadata
# ELASTIC_USER=elastic
# ELASTIC_PASSWORD=your_password

# AI Model Configuration (Legacy - kept for backward compatibility)
MODEL_NAME=clip-vit-base-patch32
# MODEL_PATH=/path/to/model
DEVICE=cpu  # or cuda

# External Embedding Service Configuration
# URL của embedding-service microservice
AI_SERVICE_URL=http://embedding-service:8000/v1/embeddings
# Model: siglip2 hoặc clip
AI_MODEL=siglip2
# Timeout cho mỗi request (seconds)
AI_SERVICE_TIMEOUT=30

# Search Configuration
TOP_K=10
SIMILARITY_THRESHOLD=0.5

# Translation Configuration
# Options: ONLINE (Google Translate scraped), LOCAL (HuggingFace), GEMINI (Google Gemini API)
TRANSLATION_MODE=GEMINI

# Google Gemini API Configuration (Required if TRANSLATION_MODE=GEMINI)
# Get your FREE API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash  # or gemini-pro

# Translation Cache (seconds)
TRANSLATION_CACHE_TTL=3600

# Data Paths
DATA_DIR=./data
VIDEO_DIR=./data/videos
FRAME_DIR=./data/frames
